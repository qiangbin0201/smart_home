<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smart.home.activity.LockActivity">

    <com.smart.home.View.LockPatternView
        android:id="@+id/lock_pattern_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lock_pattern_hint"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_black"
            android:gravity="center"
            android:text="继续"
            android:textColor="@color/text_color"
            android:textSize="@dimen/D" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_black"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color"
            android:textSize="@dimen/D" />

    </LinearLayout>

    <TextView
        android:id="@+id/lock_pattern_hint"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="请绘制图案"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
