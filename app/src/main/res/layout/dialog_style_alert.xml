<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_view"
    android:layout_marginRight="@dimen/margin_view"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/margin_view"
                android:textColor="@color/b"
                android:textSize="@dimen/A" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_view"
                android:textColor="@color/b"
                android:textSize="@dimen/B" />
        </LinearLayout>

        <View style="@style/Line.Horizontal.Divider"/>

        <TextView
            android:id="@+id/btn_alert"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appointment_text_height"
            android:background="@drawable/dialog_button_bg"
            android:gravity="center"
            android:text="我知道了" />

    </LinearLayout>

</RelativeLayout>
