<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_view"
                android:layout_marginRight="@dimen/margin_view"
                android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/margin_view"
            android:textColor="@color/b"
            android:textSize="@dimen/D"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity=""
            android:padding="@dimen/margin_view"
            android:textColor="@color/c"
            android:textSize="@dimen/E"/>
    </LinearLayout>

</RelativeLayout>
