<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_view"
    android:layout_marginRight="@dimen/margin_view"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:paddingTop="@dimen/margin_view"
            android:text="非Wi-Fi网络环境下"
            android:textColor="@color/d"
            android:textSize="@dimen/E" />

        <RadioGroup
            android:id="@+id/rg_schema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <RadioButton
                android:id="@+id/rb_schema_origin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:button="@null"
                android:gravity="center"
                 />

            <RadioButton
                android:id="@+id/rb_schema_fit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@null"
                android:gravity="center"
                 />

            <RadioButton
                android:id="@+id/rb_schema_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@null"
                android:gravity="center"
                />
        </RadioGroup>

        <View
            style="@style/Line.Horizontal.Divider"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/btn_alert"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appointment_text_height"
            android:background="@drawable/dialog_button_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/e"
            android:textSize="@dimen/D" />

    </LinearLayout>

</RelativeLayout>
