<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppHomeTheme" parent="AppHomeTheme">
        <!--没有标题栏-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--设置背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--全屏-->
        <item name="android:windowFullscreen">true</item>
        <!--没有标题栏-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/actionbar_bg</item>
        <!--<item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>-->
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="ToastText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/m</item>
    </style>



    <style name="TitleBarText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/B</item>
    </style>

    <!--标题栏上的操作按钮文字-->
    <style name="TitleBarActionText">
        <item name="android:textColor">@color/d</item>
        <item name="android:textSize">@dimen/D</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/f</item>
    </style>


    <style name="Line.Horizontal.Divider.Toolbar" parent="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_tool_bar</item>
    </style>
</resources>